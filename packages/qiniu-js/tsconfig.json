{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./esm",
    "module": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "baseUrl": "./src",
    "types": ["jest"],
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "types"
    ]
  },
  "include": [
    "src",
    "types"
  ]
}
